<!DOCTYPE html>
<html lang="fr">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main>
        <div class="jumbotron">
            <h1><i class="fa-solid fa-user mr-3"></i>Utilisateurs</h1>
            <% if (users.length == 0) { %>
                <div class="alert alert-info">Aucun utilisateurs</div>
            <% } else { %>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nom</th>
                        <th>Pr√©nom</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                <% for(i=0; i<users.length; i++){ %>
                <tr>
                    <td><b><%- i+1 %></b></td>
                    <td><%- users[i].nom %></td>
                    <td><%- users[i].prenom %></td>
                    <td>
                        <a href="/formulaire?uuid=<%- users[i].id %>" class="btn btn-primary btn-sm"><i class="fa-solid fa-pen"></i></a>
                        <a href="/supprimer?uuid=<%- users[i].id %>" class="btn btn-danger btn-sm"><i class="fa-solid fa-trash-can"></i></a>
                    </td>
                </tr>
                <% } %>
                </tbody>
            </table>
            <% } %>
        </div>
    </main>
    
    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>

</html>
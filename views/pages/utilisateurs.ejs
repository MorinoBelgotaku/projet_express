<!DOCTYPE html>
<html lang="fr">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">
    <% if (add_user) { %>
            <div class="toast" style="position: absolute; top: 0; right: 0;" data-autohide="false">
                <div class="toast-header">
                    <img src="..." class="rounded mr-2" alt="...">
                    <strong class="mr-auto">Bootstrap</strong>
                    <small>11 mins ago</small>
                    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="toast-body">
                    Hello, world! This is a toast message.
                </div>
            </div>
        <% } %>
    <header>
        <%- include('../partials/header'); %>
    </header>

    <main>
        <div class="jumbotron">
            <h1><i class="fa-solid fa-user mr-3"></i>Utilisateurs</h1>
            <% if (users.length==0) { %>
                <div class="border-top pt-3">
                    <div class="alert alert-info">Aucun utilisateurs</div>
                </div>
                <% } else { %>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Nom</th>
                                <th>Pr√©nom</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(i=0; i<users.length; i++){ %>
                                <tr>
                                    <td><b><%- i+1 %></b></td>
                                    <td><%- users[i].nom %></td>
                                    <td><%- users[i].prenom %></td>
                                    <td>
                                        <a href="/formulaire?uuid=<%- users[i].id %>" class="btn btn-primary btn-sm"><i
                                                class="fa-solid fa-pen"></i></a>
                                        <a href="/supprimer?uuid=<%- users[i].id %>" class="btn btn-danger btn-sm"><i
                                                class="fa-solid fa-trash-can"></i></a>
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                    <% } %>
        </div>
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>
</body>

</html>